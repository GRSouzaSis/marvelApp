// {
//   "extends": "@tsconfig/react-native/tsconfig.json"
// }
{
  "compilerOptions": {
    "module": "esnext",    
    "allowJs": true,    
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "typeRoots": [
    "./src/types"
  ],
}
